# PetSmart Flutter Application - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these values from your Supabase project dashboard
# Project Settings > API > Project URL and API Keys

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=PetSmart
APP_VERSION=1.0.0
DEBUG_MODE=true

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================
# These are optional and only needed if you implement these features

# Google Maps API Key (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Gateway Keys (for payment processing)
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Push Notification Keys (for Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key

# Social Login Keys (if implementing social authentication)
FACEBOOK_APP_ID=your_facebook_app_id

# =============================================================================
# ENVIRONMENT SPECIFIC SETTINGS
# =============================================================================
# You can create separate .env files for different environments:
# .env.development, .env.staging, .env.production

ENVIRONMENT=development
API_BASE_URL=https://api.yourapp.com
ENABLE_LOGGING=true
